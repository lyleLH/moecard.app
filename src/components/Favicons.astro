---
import favicon from '~/assets/favicons/favicon.ico';
import favicon32 from '~/assets/favicons/favicon-32x32.svg';
import favicon192 from '~/assets/favicons/favicon-192x192.png';
import favicon512 from '~/assets/favicons/favicon-512x512.png';
import favicon180 from '~/assets/favicons/favicon-180x180.png';
---

<!-- Basic favicons -->
<link rel="icon" href={favicon.src} sizes="any" />
<link rel="icon" href={favicon32.src} type="image/svg+xml" />
<link rel="apple-touch-icon" href={favicon180.src} />

<!-- PWA support -->
<link rel="manifest" href="/src/assets/favicons/site.webmanifest" />
<meta name="theme-color" content="#4ade80" />

<!-- Additional sizes for better device support -->
<link rel="icon" type="image/png" sizes="192x192" href={favicon192.src} />
<link rel="icon" type="image/png" sizes="512x512" href={favicon512.src} />
