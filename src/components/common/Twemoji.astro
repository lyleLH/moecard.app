---
export interface Props {
  emoji: string;
  size?: "sm" | "md" | "lg" | "xl";
  class?: string;
}

const { emoji, size = "md", class: className = "" } = Astro.props;

const sizes = {
  sm: "w-4 h-4",
  md: "w-6 h-6", 
  lg: "w-8 h-8",
  xl: "w-12 h-12"
};

const emojiUrl = `https://cdn.jsdelivr.net/gh/twitter/twemoji@latest/assets/svg/${emoji.codePointAt(0)?.toString(16)}.svg`;
---

<img 
  src={emojiUrl}
  alt={emoji}
  class={`inline-block ${sizes[size]} ${className}`}
  loading="lazy"
  decoding="async"
/> 